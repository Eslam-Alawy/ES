Dialogue: 0,0:15:19.72,0:15:22.30,Default,,0000,0000,0000,,!أنت غبيّ! ثمّة غبيّ هنا
Dialogue: 0,0:15:22.38,0:15:26.47,Default,,0000,0000,0000,,!أهذا ما تقوله لخصمٍ قاتلك بكلّ قوّته؟
Dialogue: 0,0:15:26.97,0:15:27.80,Default,,0000,0000,0000,,
Dialogue: 0,0:15:29.84,0:15:31.26,Default,,0000,0000,0000,,...أنت مجدّدًا
Dialogue: 0,0:15:31.67,0:15:34.17,Default,,0000,0000,0000,,!هذه المرّة لن أشيّع جنازة لكم
Dialogue: 0,0:15:52.97,0:15:54.76,Default,,0000,0000,0000,,.أنا غاضب
Dialogue: 0,0:16:07.26,0:16:09.38,Default,,0000,0000,0000,,!يا إلهي، ماذا تفعل؟
Dialogue: 0,0:16:09.47,0:16:12.26,Default,,0000,0000,0000,,!أرجوك يا أمي، تعالي معي
Dialogue: 0,0:16:12.51,0:16:13.72,Default,,0000,0000,0000,,.لا يوجد وقت
Dialogue: 0,0:16:13.80,0:16:16.01,Default,,0000,0000,0000,,!لا، سأبقى هنا
